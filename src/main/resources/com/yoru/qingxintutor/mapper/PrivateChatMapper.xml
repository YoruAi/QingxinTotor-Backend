<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yoru.qingxintutor.mapper.PrivateChatMapper">
    <sql id="tableName">
        private_chats
    </sql>

    <sql id="allColumns">
        id,
        user_id,
        teacher_id,
        create_time
    </sql>

    <resultMap id="PrivateChatResultMap" type="com.yoru.qingxintutor.pojo.entity.PrivateChatEntity">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="teacher_id" property="teacherId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="findByStudentAndTeacher" resultMap="PrivateChatResultMap">
        SELECT
        <include refid="allColumns"/>
        FROM
        <include refid="tableName"/>
        WHERE user_id = #{userId}
        AND teacher_id = #{teacherId}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
        <include refid="tableName"/>
        (
        user_id,
        teacher_id
        <if test="createTime != null">
            , create_time
        </if>
        )
        VALUES
        (
        #{userId},
        #{teacherId}
        <if test="createTime != null">
            , #{createTime}
        </if>
        )
    </insert>

    <select id="findById" resultMap="PrivateChatResultMap">
        SELECT
        <include refid="allColumns"/>
        FROM
        <include refid="tableName"/>
        WHERE id = #{id}
    </select>

    <select id="findByStudent" resultMap="PrivateChatResultMap">
        SELECT
        <include refid="allColumns"/>
        FROM
        <include refid="tableName"/>
        WHERE user_id = #{userId}
    </select>

    <select id="findByTeacher" resultMap="PrivateChatResultMap">
        SELECT
        <include refid="allColumns"/>
        FROM
        <include refid="tableName"/>
        WHERE teacher_id = #{teacherId}
    </select>
</mapper>