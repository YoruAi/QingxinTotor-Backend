<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yoru.qingxintutor.mapper.TeacherReviewMapper">
    <sql id="tableName">
        teacher_review
    </sql>

    <sql id="allColumns">
        id,
        user_id,
        teacher_id,
        rating,
        title,
        content,
        create_time
    </sql>

    <resultMap id="TeacherReviewResultMap" type="com.yoru.qingxintutor.pojo.entity.TeacherReviewEntity">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="teacherId" column="teacher_id"/>
        <result property="rating" column="rating"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <select id="findById" resultMap="TeacherReviewResultMap">
        SELECT
        <include refid="allColumns"/>
        FROM
        <include refid="tableName"/>
        WHERE id = #{id}
    </select>

    <select id="findByTeacherId" resultMap="TeacherReviewResultMap">
        SELECT
        <include refid="allColumns"/>
        FROM
        <include refid="tableName"/>
        WHERE teacher_id = #{teacherId}
        ORDER BY create_time DESC
    </select>

    <select id="findByUserIdAndTeacherId" resultMap="TeacherReviewResultMap">
        SELECT
        <include refid="allColumns"/>
        FROM
        <include refid="tableName"/>
        WHERE user_id = #{userId} AND teacher_id = #{teacherId}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
        <include refid="tableName"/>
        (user_id, teacher_id, rating, title, content)
        VALUES (#{userId}, #{teacherId}, #{rating}, #{title}, #{content})
    </insert>

    <!-- 计算教师平均评分 -->
    <select id="getAverageRatingByTeacherId" resultType="java.math.BigDecimal">
        SELECT ROUND(COALESCE(AVG(rating), 0.00), 2)
        FROM
        <include refid="tableName"/>
        WHERE teacher_id = #{teacherId}
    </select>

    <select id="findByUserId" resultMap="TeacherReviewResultMap">
        SELECT
        <include refid="allColumns"/>
        FROM
        <include refid="tableName"/>
        WHERE user_id = #{userId}
    </select>
</mapper>